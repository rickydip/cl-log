<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
<appender name="app_def_0" class="org.apache.log4j.FileAppender">
   <param name="file" value="LOGS/ClusterManager/Dispatcher/
DEBUG_default.txt"/>
   <layout class="org.apache.log4j.PatternLayout" >
     <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%C:%L] - %m%n"/>     
   </layout>
</appender>
  <appender name="app_def_01" class="org.apache.log4j.FileAppender">
   <param name="file" value="LOGS/DEBUG.txt"/>
   <layout class="org.apache.log4j.PatternLayout" >
        <param name="ConversionPattern" value="%5p [%t] (%F:%L) - %m%n"/>     
   </layout>
</appender>
<logger name="Dispatcher" additivity="false">
<level value="debug"/>
<appender-ref ref="app_def_0" />
<appender-ref ref="app_def_01" />

</logger>


<logger name="log4j.rootLogger" additivity="false">
<level value="DEBUG"/>
 <appender-ref ref="app_def_0"/>
<appender-ref ref="app_def_01"/>

</logger>
</log4j:configuration>
